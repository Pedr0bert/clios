/// Gera nome de branch padrÃ£o
fn branch_name(type_str, ticket, description) {
    let desc = description.to_lower();
    let clean_desc = "";
    for c in desc.chars() {
        if c == ' ' {
            clean_desc += "-";
        } else if (c >= 'a' && c <= 'z') || (c >= '0' && c <= '9') || c == '-' {
            clean_desc += c;
        }
    }
    if ticket == "" {
        type_str + "/" + clean_desc
    } else {
        type_str + "/" + ticket + "-" + clean_desc
    }
}

